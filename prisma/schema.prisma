// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int           @id @default(autoincrement())
  status    Boolean       @default(true)
  role      UserRole      @default(EMPLOYEE)
  password  String
  email     String        @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  profile   Profiles?
  area      WorkAreas[]
  project   Projects[]
  subTasks  TaskOnUsers[]
  files     Files[]
}

model Profiles {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  dni       String   @unique @db.VarChar(8)
  phone     String?  @unique
  updatedAt DateTime @updatedAt
  userId    Int      @unique
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Specialities {
  id       Int        @id @default(autoincrement())
  name     String
  projects Projects[]
}

model Projects {
  id             Int          @id @default(autoincrement())
  name           String       @unique()
  typeSpeciality String
  description    String?
  startDate      DateTime     @default(now())
  untilDate      DateTime
  status         Boolean      @default(false)
  dir            String       @default("")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  userId         Int
  moderator      Users        @relation(fields: [userId], references: [id])
  areas          WorkAreas[]
  speciality     Specialities @relation(fields: [specialityId], references: [id])
  specialityId   Int
}

model WorkAreas {
  id         Int          @id @default(autoincrement())
  name       String
  userId     Int?
  projectId  Int
  item       String       @default("")
  dir        String       @default("")
  indexTasks IndexTasks[]
  user       Users?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  project    Projects     @relation(fields: [projectId], references: [id])
}

model IndexTasks {
  id         Int        @id @default(autoincrement())
  name       String
  workAreaId Int
  workArea   WorkAreas  @relation(fields: [workAreaId], references: [id])
  item       String     @default("")
  dir        String     @default("")
  tasks      Tasks[]
  subTasks   SubTasks[]
}

model Tasks {
  id          Int        @id @default(autoincrement())
  name        String
  indexTaskId Int
  item        String     @default("")
  dir         String     @default("")
  indexTask   IndexTasks @relation(fields: [indexTaskId], references: [id])
  subTasks    SubTasks[]
}

model SubTasks {
  id          Int           @id @default(autoincrement())
  status      TaskRole      @default(UNRESOLVED)
  name        String
  percentage  Int           @default(0)
  price       Decimal       @db.Money
  hours       Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  users       TaskOnUsers[]
  files       Files[]
  taskId      Int?
  indexTaskId Int?
  task        Tasks?        @relation(fields: [taskId], references: [id])
  indexTask   IndexTasks?   @relation(fields: [indexTaskId], references: [id])
}

model TaskOnUsers {
  subtaskId  Int
  userId     Int
  user       Users    @relation(fields: [userId], references: [id], onUpdate: Cascade)
  subtask    SubTasks @relation(fields: [subtaskId], references: [id], onUpdate: Cascade)
  assignedAt DateTime @default(now())

  @@id([subtaskId, userId])
}

model Files {
  id         Int       @id @default(autoincrement())
  userId     Int
  dir        String?
  user       Users     @relation(fields: [userId], references: [id], onUpdate: Cascade)
  type       FileTypes
  subTasks   SubTasks  @relation(fields: [subTasksId], references: [id])
  subTasksId Int
}

enum UserRole {
  ADMIN
  EMPLOYEE
  MOD
}

enum TaskRole {
  UNRESOLVED
  PROCESS
  INREVIEW
  DENIED
  DONE
}

enum FileTypes {
  MATERIAL
  GUIDE
  REVIEW
  FEED
  INSPECT
}
