model SubTasks {
  id          Int           @id @default(autoincrement())
  status      TaskRole      @default(UNRESOLVED)
  item        String        @default("")
  name        String
  percentage  Int           @default(0)
  price       Decimal       @db.Money
  hours       Float
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  users       TaskOnUsers[]
  files       Files[]
  taskId      Int?
  indexTaskId Int?
  task_2_Id   Int?
  task_3_Id   Int?
  // task_4_Id   Int?
  indexTask   IndexTasks?   @relation(fields: [indexTaskId], references: [id])
  task        Tasks?        @relation(fields: [taskId], references: [id])
  task_lvl_2  Task_lvl_2?   @relation(fields: [task_2_Id], references: [id])
  task_lvl_3  Task_lvl_3?   @relation(fields: [task_3_Id], references: [id])
  // Task_lvl_4  Task_lvl_4?   @relation(fields: [task_4_Id], references: [id])
}

model TaskOnUsers {
  subtaskId  Int
  userId     Int
  user       Users    @relation(fields: [userId], references: [id], onUpdate: Cascade)
  subtask    SubTasks @relation(fields: [subtaskId], references: [id], onUpdate: Cascade)
  assignedAt DateTime @default(now())

  @@id([subtaskId, userId])
}

model Files {
  id         Int       @id @default(autoincrement())
  name       String
  userId     Int
  dir        String?
  user       Users     @relation(fields: [userId], references: [id], onUpdate: Cascade)
  type       FileTypes
  subTasks   SubTasks  @relation(fields: [subTasksId], references: [id])
  subTasksId Int
}

enum UserRole {
  ADMIN
  EMPLOYEE
  MOD
}

enum TaskRole {
  UNRESOLVED
  PROCESS
  INREVIEW
  DENIED
  DONE
}

enum FileTypes {
  MATERIAL
  SUCCESSFUL
  REVIEW
}
